@{
    ViewData["Title"] = "Olvide la contraseña";
}

<div class="container-form">
  <div class="form-container">
      <form method="post" class="form" action='@Url.Action("ForgotPassword")'>
        <div class="form-group">
          <label for="UserName">Ingresar Usuario</label>
          <input type="text" id="UserName" name="UserName" required="">
        </div>
        <div class="form-group">
          <label for="Telefono">¿Cual es su numero de Telefono?</label>
          <input type="tel" id="Telefono" pattern="\([0-9]{2}\) [0-9]{4}[ -][0-9]{4}" name="Telefono" placeholder="11 2222-3333" required="">
        </div>
        <p style="color: red;">@ViewBag.Error</p>
        <p>@ViewBag.Contrasena</p>
        @if(ViewBag.Contrasena != "")
        {
           <a href='@Url.Action("IniciarSesion")'>Iniciar sesion</a>
        }
        <a href='@Url.Action("IniciarSesion")'>Ya me acorde de mi contraseña!!</a>
        <button class="form-submit-btn" type="submit">Consultar</button>
      </form>
  </div>
</div>