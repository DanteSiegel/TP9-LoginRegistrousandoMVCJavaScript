@{
    ViewData["Title"] = "Registrarse";
}

<div class="container-form">
  <div class="form-container">
      <form class="form" method="post" action='@Url.Action("Register")' onsubmit="return validarFormulario()">
        <div class="form-group">
          <label for="UserName">Ingresar Usuario</label>
          <input type="text" id="UserName" name="UserName" required="">
        </div>
        <div class="form-group" id="form-group">
            <label for="Contrasena">Ingresar Contrase単a</label>
              <div class="contrase単aWButton">
                <input type="password" class="text" id="Contrasena" name="Contrasena" required="">
                <div class="form-group-box">
                    <button type="button" onclick="verContra()">
                      <img src="/img/Eye-icon.png" alt="">
                    </button> 
                  </div>
              </div>
        </div>
        <div class="form-group" id="form-group">
            <label for="Contrasena">Confirme La Contrase単a</label>
              <div class="contrase単aWButton">
                <input type="password" class="text" id="Contrasena2" name="Contrasena" required="">
                <div class="form-group-box">
                    <button type="button" onclick="verContra2()">
                      <img src="/img/Eye-icon.png" alt="">
                    </button> 
                  </div>
              </div>
        </div>
        <div class="form-group">
          <label for="Nombre">Nombre</label>
          <input type="text" id="Nombre" name="Nombre" required="">
        </div>
        <div class="form-group">
          <label for="Email">Email</label>
          <input type="email" id="Email" name="Email" required="">
        </div>
        <div class="form-group">
          <label for="Telefono">Telefono</label>
          <input type="tel" id="Telefono" name="Telefono" placeholder="11 2222-3333" required="" > <!-- pattern="\([0-9]{2}\) [0-9]{4}[-][0-9]{4}" --> 
        </div>
        <p id="mensajeError" style="color: red;"></p>
        <p style="color: red;">@ViewBag.Error</p>
        <input type="submit" class="form-submit-btn" value="Registrar">
      </form>
  </div>
</div>
